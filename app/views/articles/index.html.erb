<h1>Articles</h2>

<% @articles.each do |article| %>

  <div>
    <ul>
      <li>
        <h2><%= article.title %></h2>
        <p><%= article.text %></p>
      </li>
    </ul>

    <%= link_to 'Edit', edit_article_path(article.id) %>

    <%= link_to 'Show', article_path(article.id) %>

    <%= link_to 'Delete', article_path(article.id),
                          data: {
                                  method: :delete, 
                                  confirm: 'Are you sure?'
                                } %>
  </div>
  <hr>
<% end %>
